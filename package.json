  "scripts": {
    "test": "karma start",
    "test-once": "karma start --single-run && npm run e2e",
    "start": "NODE_ENV=production node ./server/index.js",
    "build": "node ./server/builder.js all",
    "serve": "node ./server/index.js all",
    "e2e": "nightwatch ./src/module.e2e.js",
    "dev": "concurrently --kill-others \"npm run serve\" \"npm run test\" ",
    "deploy-setup": "heroku create",
    "heroku": "heroku open",
    "deploy": "git push heroku master && heroku open",
    "heroku-log": "heroku logs --tail",
    "prepush": "npm run test-once && npm run eslint",
    "eslint": "eslint --color --fix ./src"
  },
